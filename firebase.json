{
  "hosting": {
    "site": "auradmin",
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [{
      "source": "**",
      "destination": "/index.html"
    }]
  },
  "firestore": {
    "rules": "firebase-rules/firestore.rules",
    "indexes": "firebase-rules/firestore.indexes.json"
  }
}